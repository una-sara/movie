/* pages/profile/profile.wxss */
.profile{
  background:#f84324;
  width:100%;    
  height:400rpx;  /*父元素高度400rpx*/
  text-align: center;/*子元素居中*/
  position:relative;/*相对定位*/
}
.profile-img{
  position: absolute;/*绝对定位*/
  width:200rpx;/*宽度和高度200*/
  height:200rpx;
  display: block;/*显示块元素*/
  overflow: hidden;/*溢出元素*/
  border-radius: 50%;/*圆角50% 圆形*/
  left:50%;   /*居中*/
  transform: translate(-50%,60rpx);
}